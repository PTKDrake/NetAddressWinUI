<?xml version="1.0" encoding="utf-8" ?>
<Page x:Class="NetAddressWinUI.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:dev="using:DevWinUI"
      xmlns:local="using:NetAddressWinUI"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:views="using:NetAddressWinUI.Views"
      xmlns:muxc="using:Microsoft.UI.Xaml.Controls"       
      xmlns:media="using:CommunityToolkit.WinUI.Media"
      xmlns:winUi="using:CommunityToolkit.WinUI"
      mc:Ignorable="d">
    <Page.Resources>
        <dev:BoolToObjectConverter x:Key="BoolReverse" TrueValue="False" FalseValue="True"/>
        <dev:BoolToObjectConverter x:Key="BoolToConnectStatus" TrueValue="Connected" FalseValue="Disconnected"/>
    </Page.Resources>
    <ScrollViewer Padding="24">
        <StackPanel VerticalAlignment="Center" Spacing="24">

            <!-- Machine Name Card -->
                <Border
                    CornerRadius="12"
                    Background="{ThemeResource SystemControlPageBackgroundAltMediumBrush}"
                    Padding="16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock
                            Text="Machine Name:" 
                            FontSize="16"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                        <TextBlock
                            x:Name="MachineNameText"
                            Text="{x:Bind ViewModel.MachineName}"
                            FontSize="16"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- IP Address Card -->
            <Border
                    CornerRadius="12"
                    Background="{ThemeResource SystemControlPageBackgroundAltMediumBrush}"
                    Padding="16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock
                            Text="IP Address:" 
                            FontSize="16"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                    <TextBlock
                            x:Name="IpAddressText"
                            Text="{x:Bind ViewModel.IpAddress}"
                            FontSize="16"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- MAC Address Card -->
            <Border
                    CornerRadius="12"
                    Background="{ThemeResource SystemControlPageBackgroundAltMediumBrush}"
                    Padding="16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock
                            Text="MAC Address:" 
                            FontSize="16"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                    <TextBlock
                            x:Name="MacAddressText"
                            Text="{x:Bind ViewModel.MacAddress}"
                            FontSize="16"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <Border
                    CornerRadius="12"
                    Background="{ThemeResource SystemControlPageBackgroundAltMediumBrush}"
                    Padding="16">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock
                            Text="Connection status:" 
                            FontSize="16"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"/>
                    <TextBlock
                            Text="{x:Bind ViewModel.Connected, Converter={StaticResource BoolToConnectStatus}, Mode=TwoWay}"
                            FontSize="16"
                            Margin="12,0,0,0"
                            VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="10">
                <Button
                    Content="Connect"
                    HorizontalAlignment="Center"
                    Padding="24,12"
                    FontSize="16" 
                    IsEnabled="{x:Bind ViewModel.Connected, Converter={StaticResource BoolReverse}, Mode=TwoWay}"
                    Command="{x:Bind ViewModel.ConnectCommand}"/>
                <Button
                    Content="Disconnect"
                    HorizontalAlignment="Center"
                    Padding="24,12"
                    FontSize="16"
                    IsEnabled="{x:Bind ViewModel.Connected, Mode=TwoWay}"
                    Command="{x:Bind ViewModel.DisconnectCommand}"/>

            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>

